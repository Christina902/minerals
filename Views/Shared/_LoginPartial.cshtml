@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUser> signInManager;

    @if (signInManager.IsSignedIn(User))
    {
        <a asp-action="Logout" asp-controller="Account" class="link">Выйти</a>
    }
    else
    {
        <a asp-controller="Account" asp-action="Register" class="link hidden" id="register">Зарегистрироваться</a>
        <a asp-controller="Account" asp-action="Login" class="link" id="login">Войти</a>
    }